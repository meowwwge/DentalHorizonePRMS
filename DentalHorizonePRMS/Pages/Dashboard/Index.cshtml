@page
@model DentalHorizonePRMS.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="min-h-[calc(100vh-80px)] bg-gradient-to-br from-white via-gray-50 to-gray-100 text-gray-800 px-6 py-6 font-poppins">

    <!-- Header -->
    <div class="flex items-center gap-3 mb-6">
        <svg class="w-7 h-7 text-orange-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h18v18H3V3z" />
        </svg>
        <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
    </div>

    <!-- Description -->
    <p class="text-sm text-gray-600 mb-10 max-w-3xl">
        Overview of patient activity, appointments, and clinic metrics.
    </p>

    <!-- Dashboard Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Total Patients -->
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 shadow-md hover:shadow-lg hover:border-blue-400 transition duration-300">
            <h2 class="text-xl font-semibold text-blue-900 mb-2">Total Patients</h2>
            <p class="text-sm text-gray-700 mb-4">View all registered patients in the system.</p>
            <p id="totalPatients" class="text-4xl font-bold text-blue-800 mb-4">0</p>
            <a href="/PatientManagement" class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded hover:bg-blue-700 transition">
                View Details
            </a>
        </div>

        <!-- Upcoming Appointments -->
        <div class="bg-green-50 border border-green-200 rounded-xl p-6 shadow-md hover:shadow-lg hover:border-green-400 transition duration-300">
            <h2 class="text-xl font-semibold text-green-900 mb-2">Upcoming Appointments</h2>
            <p class="text-sm text-gray-700 mb-4">See scheduled visits for today and beyond.</p>
            <p id="upcomingAppointments" class="text-4xl font-bold text-green-800 mb-4">0</p>
            <a href="/Appointments/Upcoming" class="inline-block px-4 py-2 bg-green-600 text-white text-sm font-semibold rounded hover:bg-green-700 transition">
                View Details
            </a>
        </div>

        <!-- Missed Appointments -->
        <div class="bg-red-50 border border-red-200 rounded-xl p-6 shadow-md hover:shadow-lg hover:border-red-400 transition duration-300">
            <h2 class="text-xl font-semibold text-red-900 mb-2">Missed Appointments</h2>
            <p class="text-sm text-gray-700 mb-4">Track patients who missed their scheduled visits.</p>
            <p id="missedAppointments" class="text-4xl font-bold text-red-800 mb-4">0</p>
            <a href="/Appointments/Missed" class="inline-block px-4 py-2 bg-red-600 text-white text-sm font-semibold rounded hover:bg-red-700 transition">
                View Details
            </a>
        </div>

    </div>
</div>

<script>
    async function loadDashboardTotals() {
        try {
            const res = await fetch('/api/patient/dashboard-totals');
            const data = await res.json();

            document.getElementById("totalPatients").textContent = data.totalPatients;
            document.getElementById("upcomingAppointments").textContent = data.upcomingAppointments;
            document.getElementById("missedAppointments").textContent = data.missedAppointments;
        } catch (error) {
            console.error("Failed to load dashboard totals:", error);
        }
    }

    document.addEventListener("DOMContentLoaded", loadDashboardTotals);
</script>
