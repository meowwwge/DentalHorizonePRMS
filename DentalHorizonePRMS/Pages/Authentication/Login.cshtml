@page
@using DentalHorizonePRMS.Pages.Authentication
@model LoginModel
@{
	ViewData["Title"] = "Login";
    Layout = null;
}

<h2>LOGIN</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>Username</label>
        <input asp-for="LoginDTO.Username" name="LoginDTO.Username" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="LoginDTO.Password" type="password" name="LoginDTO.Password" />
    </div>
    <button type="submit">Login</button>
</form>


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
	<p style="color:red">@Model.ErrorMessage</p>	
}